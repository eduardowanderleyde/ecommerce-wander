<!-- app/views/home/index.html.erb -->
<div class="bg-green-100 min-h-screen flex flex-col items-center justify-center">
  <div class="bg-white p-10 rounded-lg shadow-lg text-center mb-8">
    <h3 class="text-xl font-semibold mb-4">Hey, Welcome to my e-commerce</h3>

    <% if user_signed_in? %>
      <h1 class="text-3xl font-bold text-green-600">Welcome</h1>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% else %>
      <h3 class="text-xl font-semibold mb-4">You're not logged in... Please</h3>
      <div class="space-y-2">
        <%= link_to "Sign up", new_user_registration_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Login", new_user_session_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      </div>
    <% end %>

    <div class="mt-8">
      <%= link_to "Home", root_path, class: "text-blue-500 underline hover:text-blue-700" %>
    </div>
  </div>

  <!-- New Section for Posts -->
  <div class="w-full bg-green-100 py-10">
    <div class="bg-green-100 p-10 rounded-lg shadow-lg w-full max-w-screen-xl mx-auto">
      <h2 class="text-2xl font-bold mb-6 text-center">Our Latest Posts</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @posts.each do |post| %>
          <div class="post-card bg-white rounded-lg shadow-md overflow-hidden p-4">
            <img src="<%= post.image_url %>" alt="<%= post.title %>" class="post-image w-full h-40 object-cover mb-4">
            <h3 class="post-title text-lg font-semibold mb-2"><%= post.title %></h3>
            <p class="post-description text-gray-600 mb-4"><%= truncate(post.description, length: 100) %></p>
            <%= link_to "Read More", post_path(post), class: "read-more block mt-4 text-blue-500 hover:underline" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
